{% extends app.debug ? 'common/base_debug.html.twig' : 'common/base.html.twig' %}

{% block base %}<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Silex{% endblock %}</title>
        {% block stylesheets %}
            <link type="text/css" rel="stylesheet" href="/css/main.css" />
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {% if app.debug %}
                <script src="/js/lib.js"></script>
                <script src="/js/main.js"></script>
            {% else %}
                <script src="/js/app.min.js"></script>
            {% endif %}
        {% endblock %}
    </body>
</html>{% endblock %}
